<!-- Modal -->
<div class="modal fade" id="obsModal" tabindex="-1" role="dialog" aria-labelledby="obsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="obsModalLabel">Coloque suas Obersações no Pedido / Cotação / Lead</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="{{CONTAINER}}lead/update/{{id}}">
                <div class="modal-body">

                    <div class="form-group">
                        <label for="observacaoFinaceiro">observacaoFinanceiro</label>
                        <textarea class="form-control" name="observacaoFinaceiro" id="observacaoFinaceiro" rows="3">{{observacaoFinaceiro}}</textarea>
                    </div>
                    <div class="form-group">
                        <label for="observacaoLogistica">observacaoLogistica</label>
                        <textarea class="form-control" name="observacaoLogistica" id="observacaoLogistica" rows="3">{{observacaoLogistica}}</textarea>
                    </div>
                    <div class="form-group">
                        <label for="observacaoNotaFiscal">observacaoNotaFiscal</label>
                        <textarea class="form-control" name="observacaoNotaFiscal" id="observacaoNotaFiscal" rows="3">{{observacaoNotaFiscal}}</textarea>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary rounded-0" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-primary rounded-0">Gravar Edições</button>
                </div>
            </form>
        </div>
    </div>
</div>

