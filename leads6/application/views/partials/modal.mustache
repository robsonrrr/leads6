<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Importar Produtos</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="{{CONTAINER}}lead/import" method="get">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="">Selecione de onde quer importar</label>
                        <select class="form-control" id="recipient-type" name="type">
                            <option value=""></option>
                            <option value="ecommerce">Ecommerce</option>
                            <option value="lead">Lead</option>
                            <option value="order">Pedido</option>
                            <option value="quote">Consulta</option>
                            <option value="shipment">Importação</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Número <small>( Pedido, Lead ou Cotação )</small> ou Nome <small>( Ecommerce )</small>:</label>
                        <input type="text" class="form-control" id="recipient-name" name="order" autocomplete="off">
                        <input type="hidden" class="form-control" id="lead" name="lead" value="{{id}}">
                        <input type="hidden" class="form-control" id="segmentoPOID" name="segmentoPOID" value="{{segmentoPOID}}">
                        <input type="hidden" class="form-control" id="customer" name="customer" value="{{clientePOID}}">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Importar</button>
                </div>
            </form>
        </div>
    </div>
</div>